---
import Layout from '../layouts/Layout.astro';

// Configurar código de respuesta 503 (Service Unavailable) para coming soon
Astro.response.status = 503;
Astro.response.headers.set('Retry-After', '604800'); // 7 días en segundos
---

<Layout>
	<main class="relative min-h-screen overflow-hidden flex flex-col bg-animated">
		<!-- Main Content -->
		<div class="flex-1 flex items-center justify-center px-6 py-20 relative z-10">
			<div class="max-w-7xl w-full text-center">
				<!-- Logo Principal -->
				<div class="mb-16 md:mb-20">
					<h1 class="font-actay font-bold leading-none opacity-0 animate-fade-in-up animation-delay-300">
						<span class="inline-block text-verde-novara text-8xl lg:text-[12rem] xl:text-[14rem] tracking-tight lowercase">
							novara
						</span>
						<sup class="text-gray-400 text-base sm:text-xl md:text-2xl lg:text-3xl align-super ml-0.5 sm:ml-1 md:ml-2">®</sup>
					</h1>
				</div>
				
				<!-- Message -->
				<div class="mt-16 md:mt-20 mb-10 md:mb-12 opacity-0 animate-fade-in-up animation-delay-600">
					<p class="text-2xl md:text-3xl lg:text-4xl font-medium text-gray-300 mb-4 tracking-tight">
						Próximamente
					</p>
					<p class="text-sm md:text-base lg:text-lg text-gray-500 leading-relaxed max-w-2xl mx-auto font-bureau">
						Estamos ocupados creando sitios increíbles para nuestros clientes.<br class="hidden sm:block" />
						Aún no hemos tenido tiempo de terminar el nuestro.
					</p>
				</div>

				<!-- Accent Bar with Gradient -->
				<div class="w-32 md:w-48 h-1 bg-gradient-verde mx-auto mt-12 md:mt-16 rounded-full opacity-0 animate-fade-in-up animation-delay-900"></div>

				<!-- Redes Sociales -->
